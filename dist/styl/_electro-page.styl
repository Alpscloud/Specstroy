@import '_vars.styl'

.header__electron
	background url('../img/electon-bg.png') no-repeat
	background-size cover
	padding-bottom 120px

// Work list
.work__item
	display table
	margin-bottom 20px
	&--img
		display table-cell
		vertical-align middle
		background url('../img/circle-ic.png') center no-repeat
		width 60px
		height 60px
		line-height 60px
		font 1.125em $RobBold
		text-align center
	p
		display table-cell
		vertical-align middle
		padding-left 20px
// ============

// Offer section
.offer__item
	box-shadow 0px 5px 20px 0px rgba($text-color, 0.2)
	position relative
	margin-bottom 40px
	&--wrapp
		padding 0 20px
	
	img
		width 100%
		height 160px
	&--descr
		position absolute
		left 0
		bottom 0
		width 100%
		background rgba($text-color, .5)
		padding 15px 0
		text-align center
	&--title
		color $light-color
//============

// offer
.type__item
	padding 35px 25px
	box-shadow 0px 5px 20px 0px rgba($text-color, 0.2)
	text-align center
	margin-bottom 30px
	.btn
		margin 20px 0
	.price
		font 1.25em $RobBold
	
	p
		font-family $RobReg
		min-height 90px
	.ic
		display inline-block
		width 150px
		height 150px
		background url('../img/serv-item-sprite.png') no-repeat
		&__crash
			background-position 0 0
		&__wiring
			background-position -156px 0
		&__gasket
			background-position -312px 0
		&__setup
			background-position -468px 0
		&__worktime
			background-position -619px 0
		&__door
			background-position -772px 0
		&__turnstile
			background-position -923px 0
		&__video
			background-position -1076px 0
		&__barrier
			background-position -1227px 0
		&__touch
			background-position -1379px 0
		&__access
			background-position -1530px 0
		&__fail
			background-position -1684px 0
		&__finger
			background-position -1836px 0
		&__btn
			background-position -1987px 0
		&__lock
			background-position -2139px 0
		&__integr
			background-position -2291px 0
			
		&__signal
			background-position -2446px 0
		&__fire
			background-position -2601px 0
		&__month
			background-position -2756px 0
		&__fewmont
			background-position -2991px 0
			
		&__digital
			background-position -3061px 0
		&__control
			background-position -3215px 0
		&__signaling
			background-position -3369px 0
		&__production
			background-position -3523px 0
		&__life
			background-position -3523px 0
			
	&--access
		p
			min-height 45px
			margin-bottom 20px
			
.offer__block
	margin-top 50px
	margin-bottom 50px
	
	padding 50px
	text-align center
	border 3px dotted $dotted-color
	border-radius 10px
	.btn
		padding 13px 50px
	p
		font 1.250em $RobReg
		margin-bottom 30px
	&--strong
		p
			font 1.875em $RobLight
			margin-bottom 0
			strong
				font-family $RobBold
.outside
	margin-bottom 0
// =========


// Advantages
.sect__advantages
	background $bg-color url('../img/service-bg.png') left no-repeat
	background-size 50% 100%
	&:after
		width 50%
	.advantages__row
		display flex
		align-items center
	.adv__list
		&--item
			display block
			margin-bottom 25px
			color $light-color
			font-size 1.125em
			&:last-child
				margin-bottom 0
.advantages__block
	width 50%
	&:first-child
		background url('../img/service-bg.png') right no-repeat
		background-size cover
		
.list__title
	position relative
	text-transform uppercase
	color $light-color
	font 2.188em $OsBold
	margin-bottom 30px
	&:before
		content ''
		display inline-block
		width 50px
		height 2px
		background $light-color
		position absolute
		bottom -15px
		left 0

.adv__block
	margin-bottom 30px
	position relative
	padding-left 50px
	text-align left
	
	&--title
		font-family $RobBold
		margin-bottom 15px
	&:last-child
		margin-bottom 0
	
	&:before
		content ''
		display inline-block
		background url('../img/small-ic-sprite.png') no-repeat
		position absolute
		top 0
		left 0
	&.cpo
		&:before
			background-position 0 0
			width 40px
			height 15px
	&.quality
		&:before
			background-position 0 -17px
			width 24px
			height 24px
	&.clients
		&:before
			background-position 0 -43px
			width 21px
			height 24px
	&.star
		&:before
			width 25px
			height 25px
			background-position 0 -67px
	&.payment
		&:before
			height 26px
			width 20px
			background-position -2px -93px
		p
			margin-bottom 20px
			&:last-child
				margin-bottom 0	
// =========


// Price section
.sect__price
	.sect__descr
		text-transform uppercase
		margin-bottom 25px
.pricelist__note
	background $accent-color
	color $light-color
	padding 10px
	display inline-block
	text-align center
	margin-bottom 25px
	b
		font-family $RobBold
		
.price__table
	width 100%
	font 1em $RobLight
	color $text-color
	&--row
		padding 30px
		text-align center
	&--cell
		padding 10px
	
	.name__cell
		width 50%
	.prop__cell
		width 25%
	.dark__cell
		background #eeeeee
	.light__cell
		background #f5f5f5
	.bold__cell
		font-family $RobBold
		
// =========


// Gallery
.gallery__item
	display block
	position relative
	text-align center
	margin-bottom 30px
	&:hover
	
		&:after
			background rgba($text-color, .3)
			
	&:after
		content ''
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		z-index 5
		background rgba($text-color, .1)
		transition all .23s ease-in-out
	&--title
		transition all .23s ease-in-out
		text-align center
		position absolute
		top 50%
		left 50%
		transform translate(-50%, -50%)
		color $light-color
		font 1em $RobReg
		z-index 10
// ===========