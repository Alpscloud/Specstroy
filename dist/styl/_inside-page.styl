@import '_vars.styl'

.inside-page
	.nav__line
		position relative
	
	.sect__feedback
		background $light-color
	
	.sect__license
		text-align center
		.fancybox
			display inline-block
			
			img
				max-width 250px
				
.blog-post
	background $bg-color
	box-shadow 0px 5px 20px 0px rgba($text-color, 0.2)
	margin-bottom 30px
	padding 30px
	&-body
		h3
			a
				color $text-color
				font 1.125em $RobMed
				&:hover
					color $accent-color
		p
			margin 20px 0
	.post-thumb
		display block
		
.sect__title--wrapper
	padding 100px 0
	background-size cover
	color $light-color
	
	
	.sect__title
		margin-bottom 0
		text-transform uppercase
		
.sect__clients
	.btn
		span
			position relative
			&:before
				content 'посмотреть еще'
				text-transform uppercase
				margin-right 4px
				
.sect__title
	&--blog
		background url('../img/header-blog-img.png') center no-repeat
	&--clients
		background url('../img/header-clients-img.png') center no-repeat
	&--feedback
		background url('../img/header-feedback-img.png') center no-repeat
	&--gallery
		background url('../img/header-gallery-img.png') center no-repeat
	&--licenses
		background url('../img/header-licenses-img.png') center no-repeat
	&--contacts
		background url('../img/header-contacts-img.png') center no-repeat