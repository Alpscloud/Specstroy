@import '_vars.styl'

.inside-page
	.nav__line
		position relative
	
	.sect__feedback
		background $light-color
	
	.sect__license
		text-align center
		.fancybox
			display inline-block
			
			img
				max-width 250px
				
.blog-post
	background $bg-color
	box-shadow 0px 5px 20px 0px rgba($text-color, 0.2)
	margin-bottom 30px
	padding 30px
	&-body
		h3
			a
				color $text-color
				font 1.125em $RobMed
				&:hover
					color $accent-color
		p
			margin 20px 0
	.post-thumb
		display block