@import '_vars.styl'

.btn
	display inline-block
	padding 20px
	text-transform uppercase
	box-shadow none
	background transparent
	cursor pointer
	transition all .23s ease-in-out
	text-align center
	border 2px solid transparent
	&__light
		font 0.813em $RobBold
		color $text-color
		background $light-color
		&:hover
			color $light-color
			border-color $light-color
			background transparent
	&__accent
		background $accent-color
		color $light-color
		padding 10px 20px
		&:hover
			background transparent
			color $accent-color
			border-color $accent-color
	&__question
		padding 10px 20px
		font 1.875em $OsBold
		width 100%
			

.overlay
	position fixed
	top 0
	left 0
	width 100%
	height 100%
	transition all .23s ease-in-out
	background rgba($accent-color, .6)
	
	z-index -1
	opacity 0
	visibility hidden
	&.active
		visibility visible
		opacity 1
		z-index 20
		
.popup
	position fixed
	top 50%
	left 50%
	transform translate(-50%, -50%)
	width 100%
	max-width 350px
	padding 35px 25px
	background $light-color
	transition all .23s ease-in-out
	box-shadow 0px 5px 20px 0px rgba($text-color, 0.2)
	
	opacity -1
	visibility hidden
	z-index 22
	
	&.active
		opacity 1
		visibility visible
		z-index 22

	.btn__close
		position absolute
		top 20px
		right 20px
		width 25px
		height 25px
		line-height 25px
		text-align center
		border 1px solid $accent-color
		color $accent-color
		background transparent
		border-radius 100%


			

