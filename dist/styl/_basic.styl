// File with all variables styles
@import '_vars.styl'

*
	padding 0
	margin 0
	box-sizing border-box
	
body
	font 14px 'OpenSansRegular', Arial, sans-serif
	overflow-x hidden
	height 100%

h1,h2,h3,h4,h5,h6,ul,li
	margin 0
	padding 0

input[type="submit"]
	outline none

a
	text-decoration none
	outline none
	transition all .23s ease-in-out
	&:hover
		text-decoration none
		
button
	box-shadow none
	border none
	outline none
	cursor pointer

img
	width 100%
	height auto
	
.clearfix:before,
.clearfix:after,
.container:before,
.container:after,
.container-fluid:before,
.container-fluid:after,
.row:before,
.row:after
	content " "
	display table

.clearfix:after,
.container:after,
.container-fluid:after,
.row:after
	clear both

.left
	float left

.right
	float right

.text-center
	text-align center
.text-left
	text-align left
.text-right
	text-align right
	
.box 
	padding 35px 0