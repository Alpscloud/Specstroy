// File with all variables styles
@import '_vars.styl'

*
	padding 0
	margin 0
	box-sizing border-box
	
body
	font 16px $RobLight
	overflow-x hidden
	height 100%
	background $light-color
	color $text-color

h1,h2,h3,h4,h5,h6,ul,li
	margin 0
	padding 0

input[type="submit"]
	outline none

a
	text-decoration none
	outline none
	transition all .23s ease-in-out
	&:hover
		text-decoration none
		
button
	box-shadow none
	border none
	outline none
	cursor pointer

img
	width 100%
	height auto
	
.clearfix:before,
.clearfix:after,
.container:before,
.container:after,
.container-fluid:before,
.container-fluid:after,
.row:before,
.row:after
	content " "
	display table

.clearfix:after,
.container:after,
.container-fluid:after,
.row:after
	clear both

.container
	position relative
	z-index 2

.left
	float left

.right
	float right

.text-center
	text-align center
.text-left
	text-align left
.text-right
	text-align right
	
.box 
	padding 3.750em 0
	
.sect__title
	font 1.875em $OsBold
	text-transform uppercase
	margin-bottom 70px
	color inherit
	&--text
		margin-bottom 25px
	&--light
		color $light-color
		
.sect__descr
		font 1.125em $RobLight
		margin-bottom 45px
		
.sect__overlay
	position relative
	&:after
		content ''
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		background rgba($accent-color, .8)
		
.sect__bg
	background $bg-color