@import '_vars.styl'

.header__ats
	background url('../img/header-bg-ats.png') center no-repeat
	background-size  cover
	padding-bottom  120px
	
	.form__wrapper
		padding-bottom 35px
		
.sect__offer--ats
	.offer__item--wrapp
		p
			margin 20px 0
			min-height 90px
	.offer__item
		margin 0
		
.sect__audit--ats
	background $accent-color
	.form__wrapper
		background url('../img/form-block-bg-ats.png') top right no-repeat
	
	.form__item
		width 100%

div.form__ats
	padding-bottom 40px
	
.sect__work--ats
	.work__item
		display block
		text-align center
		margin-bottom 25px
		background $light-color
		transition all .23s ease-in-out
		padding 15px
		&:hover
			box-shadow 0px 5px 20px 0px rgba($text-color, 0.2)
		p
			padding-left 0
			display block
		&--img
			display block
			background url('../img/circle-ic-big.png') center no-repeat
			width 150px
			height 150px
			font 2.813em $RobBold
			color $accent-color
			line-height 150px
			margin 0 auto 20px
		