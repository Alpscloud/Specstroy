// Media queris mixins add there
@import '../../node_modules/stylus-media-queries/index.styl'
/* -------Screen sizes----------- 
+screen(minWidth, maxWidth)
+max-screen(maxWidth)
+min-screen(minWidth)
+screen-height(minHeight, maxHeight)
+max-screen-height(maxHeight)
+min-screen-height(minHeight)
*/

+max-screen(1200px)
	// main page
	.nav__list--item
		margin-right 5px
	.header__item
		h3
			font-size 12px
		
+max-screen(1000px)
	// main
	.header
		padding-top 40px
		&__item
			h3
				min-height 50px
	.nav__line
		.contacts__list--item
			margin-right 5px
		.contacts__list--link
			font-size 12px
	
		&--header
			position relative
			nav
				display none
				float none
				width 100%
				top 100%
				left 0
				position absolute
				background $light-color
				z-index 20
		

			.nav__list
				&--item
					display block
					padding 10px 0
					text-align center
					border-bottom 1px solid $dotted-color
					margin 0
				
	.hamburger
		display block
		float right
	
	.footer
		.nav__list--link
			font-size 10px
	// it
	.header__it
		.header__block
			display block
		.title__important
			margin-bottom 25px
			text-align center
	.parts__item
		padding 0 45px
	.block
		display block
		.title__important
			margin-bottom 25px
			text-align center
			font-size 14px
+max-screen(768px)
	body
		font-size 13px
	.box
		padding 30px 0
	.sect__title--text
		margin-bottom 15px
	.sect__title
		margin-bottom 35px
	.sect__descr
		margin-bottom 25px
	.nav__line
		&--item
			padding 10px 0
		&--title
			text-align center
			margin-bottom 10px
		.contacts__list
			text-align center
			&--item
				display block
				margin-bottom 10px
				&:last-child
					margin-bottom 0
	.about__info--img 
		img
			margin-top 25px
	.contacts__block
		margin-left 0
		
	.google__map 
		iframe
			height 220px
	
	.footer
		.nav__line--item
			text-align center
		.logo__img
			margin-bottom 20px
		.nav__list
			text-align center
			&--link
				font-size 12px
	// acces
	.header__access 
		.header__title
			margin-bottom 30px
	.facts__item
		margin-bottom 25px
	.type__item--access 
		p
			min-height auto
		.price
			font-size 20px
	.sect__form--access
		.header__block
			display block
		.title__important
			margin-bottom 20px
			text-align center
			span
				padding 2px
		.form__wrapper
			padding 25px
	.sect__advantages
		background-image none
		&:after
			display none
		
		.advantages__row
			display block
		.adv__list
			margin-bottom 25px
			&--item
				color $text-color
		.list__title
			color $text-color
			&:before
				background $text-color
	.question__block
		display block
		text-align center
		p
			margin-bottom 25px
	.form__page 
		.btn__submit
			padding 10px
	.offer__block
		padding 25px
+max-screen(420px)
	.logo__img
		max-width 200px
	.header
		&__item
			padding 20px 10px
			h3
				font-size 10px
			&--count
				margin 10px 0
				font-size 16px
	.about__info
		padding 20px
	.block__title
		&:before
			display none
	.footer
		.logo__img
			margin-bottom 15px
		.nav__list--item
			display block
			padding 10px 0
			border-bottom 1px solid $dotted-color
			&:first-child
				border-top 1px solid $dotted-color
	// it
	.adv__item
		p
			padding-left 0
			

