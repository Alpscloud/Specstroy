// Media queris mixins add there
@import '../../node_modules/stylus-media-queries/index.styl'
/* -------Screen sizes----------- 
+screen(minWidth, maxWidth)
+max-screen(maxWidth)
+min-screen(minWidth)
+screen-height(minHeight, maxHeight)
+max-screen-height(maxHeight)
+min-screen-height(minHeight)
*/

+max-screen(1200px)
	// main page
	.nav__list--item
		margin-right 5px
	.header__item
		h3
			font-size 12px
	.video__serv--item
		padding 10px
	.video__serv--descr
		padding-left 10px
		
	.header__access
		.man__img
			max-width 475px
			right 50px
		
+max-screen(1000px)
	// main
	.header
		padding-top 40px
		&__item
			h3
				min-height 50px
	.nav__line
		.contacts__list--item
			margin-right 5px
		.contacts__list--link
			font-size 12px
	
		&--header
			position relative
			nav
				display none
				float none
				width 100%
				top 100%
				left 0
				position absolute
				background $light-color
				z-index 20
		

			.nav__list
				&--item
					display block
					padding 10px 0
					text-align center
					border-bottom 1px solid $dotted-color
					margin 0
				
	.hamburger
		display block
		float right
	
	.footer
		.nav__list--link
			font-size 10px
	// it
	.header__it,
	.header__fire
		.header__block
			display block
		.title__important
			margin-bottom 25px
			text-align center
	.parts__item
		padding 0 45px
	.block
		display block
		.title__important
			margin-bottom 25px
			text-align center
			font-size 14px
	// video
	.video__adv--item
		text-align center
		padding 10px
		p
			position relative
			margin-top 15px
			max-width 100%
			left 0
		.count
			font-size 150px
	.design__item
		margin-bottom 25px
		p
			min-height 45px
			
	.sect__adv--company 
		.adv__row--title
			font-size 28px
	.sect__adv--company 
		.adv__row
			&.first
				background-position  bottom left
	
	.video__serv--item
		min-height auto
		padding 25px
		width 100%
		&.no-border
			border-left 2px solid $danger-color
			border-right 2px solid $danger-color
	.sect__services
		.no-padding
			padding 0 15px
	.gallery__wrapp 
		.gallery__item
			height 250px
			
	.header__access
		.man__img
			display none
	
			
+max-screen(770px)
	body
		font-size 13px
	.box
		padding 30px 0
	.sect__title--text
		margin-bottom 15px
	.sect__title
		margin-bottom 35px
	.sect__descr
		margin-bottom 25px
	.header__electron
		padding-bottom 40px
		.man__img
			display none
	.nav__line
		&--item
			padding 10px 0
		&--title
			text-align center
			margin-bottom 10px
		.contacts__list
			text-align center
			&--item
				display block
				margin-bottom 10px
				&:last-child
					margin-bottom 0
	.about__info--img 
		img
			margin-top 25px
	.contacts__block
		margin-left 0
		
	.google__map 
		iframe
			height 220px
	
	.footer
		.nav__line--item
			text-align center
		.logo__img
			margin-bottom 20px
		.nav__list
			text-align center
			&--link
				font-size 12px
	// acces
	.header__access,
	.header__fire
		.header__title
			margin-bottom 30px
	.facts__item
		margin-bottom 25px
	.type__item--access 
		p
			min-height auto
		.price
			font-size 20px
	.sect__form--access,
	.sect__audit--fire,
	.sect__audit--fire--bottom
		.header__block
			display block
		.title__important
			margin-bottom 20px
			text-align center
			span
				padding 2px
		.form__wrapper
			padding 25px
	.sect__advantages
		background-image none
		&:after
			display none
		
		.advantages__row
			display block
		.adv__list
			margin-bottom 25px
			&--item
				color $text-color
		.list__title
			color $text-color
			&:before
				background $text-color
	.question__block
		display block
		text-align center
		p
			margin-bottom 25px
	.form__page 
		.btn__submit
			padding 10px
	.offer__block
		padding 25px
		
	// it
	.sect__advant
		.no-padding
			padding 0 15px
		.video__adv--item
			padding 25px
			p
				font-size 18px
	.video__form
		display block
		
	.sect__adv--company 
		.adv__row--title
			margin-bottom 25px
	.video__pricelist 
		.price__list--item 
			p
				font-size 12px
	.sect__offer--ats
		.offer__item--wrapp
			margin-bottom 30px
			
	.ic__row
		.item
			display block
		.ic
			min-width 55px
			&__protect
				background-position 9px 0
				
	.inside-page
		.sect__license
			.fancybox
				margin-bottom 25px
				
	.blog-post
		img
			margin-bottom 25px
			
	#slider,
	#sliderAccess
		padding 0 25px
		.owl-nav
			.owl-next
				right 0
			.owl-prev
				left 0
+max-screen(420px)
	.logo__img
		max-width 200px
	.header
		&__item
			padding 20px 10px
			h3
				font-size 10px
			&--count
				margin 10px 0
				font-size 16px
	.about__info
		padding 20px
	.block__title
		&:before
			display none
	.footer
		.logo__img
			margin-bottom 15px
		.nav__list--item
			display block
			padding 10px 0
			border-bottom 1px solid $dotted-color
			&:first-child
				border-top 1px solid $dotted-color
	// it
	.adv__item
		p
			padding-left 0
			
	.video__pricelist 
		.price__list--item
			border-bottom 2px dotted $dotted-color
			p
				display block
				font-size 14px
				margin-bottom 6px
			span
				float none
				font 16px $RobBold
	.sect__adv--company 
		.adv__row
			padding 15px
			&--title
				font-size 18px
	.video__serv--item
		display block
		text-align center
		.ic
			margin 0 auto 15px auto
			display block
	.gallery__wrapp 
		.gallery__item
			height 250px
			width 50%
			margin-bottom 0
	.design__item
		p
			font-size 11px
	.sect__form 
		.form__block
			padding 15px
			&--item	
				text-align center
				p
					font-size 18px	
	.header__video
		.header__title
			font-size 24px
			
	#slider,
	#sliderAccess
		.owl-nav 
			.owl-next
				right -25px

