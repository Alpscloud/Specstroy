@import '_vars.styl'

// POpup form

.form
	&__title
		font 1.500em $RobBlack
		margin-bottom 20px
	.input
		position relative
		width 100%
		margin-bottom 25px
		&:last-child
			margin-bottom 35px
		&__label
			position absolute
			top 20px
			left 0
			font 0.875em $RobLight
			transition all .23s ease-in-out		
			
		&__item
			position relative
			display block
			width 100%
			background transparent
			font 16px $RobLight
			outline none
			padding 20px 10px 5px 0
			background transparent
			border none
			transition all .23s ease-in-out
			
	&__popup
		.input
			&__item
				border-bottom 1px solid $text-color
				color $text-color
				&:hover
					border-color $accent-color
					+ label
							color $accent-color
				&:focus
					border-color $accent-color
					+ label
							color $accent-color
							top 0
			&__label
				color $text-color
				&.active
					top 0
					color $accent-color	
	&__page
		.btn__submit
			width 100%
			font-family $RobBold
		.input
			&__item
				border-bottom 1px solid $light-color
				color $light-color
				&:hover
					border-color $light-color
					+ label
							color $light-color
				&:focus
					border-color $light-color
					+ label
							color $light-color
							top 0
			&__label
				color $light-color
				&.active
					top 0
					color $light-color				
.form__wrapper
	padding 30px 20px 0 20px
	border 2px solid $light-color
.form__item
	width 50%
	&:first-child
		padding-right 15px

	&--title
		font 0.938em $OsMed
		text-transform uppercase
		color $light-color
		margin-bottom 25px
	&--descr
		font 1em $RobLight
		color $light-color 
	
input.contact__form--input::-webkit-input-placeholder
	text-transform uppercase
input.contact__form--input::-moz-placeholder
	text-transform uppercase
input.contact__form--input:-moz-placeholder
	text-transform uppercase
input.contact__form--input:-ms-input-placeholder
	text-transform uppercase
	
.video__form
	display flex
	align-items center
.file__upload
	position relative
	cursor pointer
	display inline-block
	.btn__file
		font 1.250em $RobReg
		text-transform uppercase
		color $light-color
		background transparent
		border-bottom 1px dashed $light-color
		cursor pointer
	input[type="file"]
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		cursor pointer
		opacity 0

.item
	position relative
	display inline-block
	transition all .23s ease-in-out
	border 2px solid transparent
	&:hover
		border-color $light-color	
	label
		display inline-block
		width 130px
		padding 10px
		border 2px solid transparent
		text-align left
		display inline-block
		width 130px
		cursor pointer
		transition all .23s ease-in-out
		&:hover
			border-color $light-color
		.title
			font 1.250em $RobReg
			color $light-color
	.radio:checked
		+ label
			border-color $light-color
	.radio
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		opacity 0
		cursor pointer
	.quality
		display block
		width 100%
		height 120px
		cursor pointer
		&__bad
			background url('../img/video-quality-1.png') center no-repeat
		&__standart
			background url('../img/video-quality-2.png') center no-repeat
		&__premium
			background url('../img/video-quality-3.png') center no-repeat
				