@import '_vars.styl'

.header__protect
	background url('../img/header-protect-bg.png') center no-repeat
	background-size  cover
	padding-bottom  120px
	
	.form__wrapper
		position relative
	
	.header__img
		position absolute
		top -25px
		left 96%
		max-width 320px
		z-index 5

.blue__protect
	padding 6px
	background $accent-color
	
.work__item
	height 85px
	
.sect__audit--protect
	background $accent-color
	.form__wrapper
		background url(../img/form-bg-2.png) top right no-repeat
		
		.form__item
			width 100%
		
.form__protect
	padding-bottom 40px


.ic__row
	margin-top 40px
	text-align center
	.item
		display inline-block
.protect__item
	display table
	.ic
		display table-cell
		vertical-align middle
		background url('../img/blue-ic-sprite.png') no-repeat
		height 53px
		&__protect
			background-position  0 0
			width 41px
		&__video
			background-position -49px 0
			width 57px
		&__complexe
			background-position -116px 0
			width 50px
	p
		display table-cell
		vertical-align middle
		text-align left
		padding-left 20px
		max-width 200px
		
.sect__include
	.offer__block
		p
			margin-bottom 0
	.type__item--protect
		box-shadow none
	
.include__row
	display flex
	justify-content space-around
	flex-wrap wrap
	.type__item
		width 220px
		padding 0
		.ic
			margin-bottom 25px
			
			