@import '_vars.styl'
.video-page
	color $video-text-color
	font-family $RobReg
.header__video
	background url('../img/video-bg.png') center no-repeat
	background-size  cover
	padding-bottom  120px
	
	.header__title
		font-size 2.188em
		text-transform uppercase
		margin-bottom 65px
		
// Sect advantages

.no-padding
	padding 0

.video__adv--item
	position relative
	padding 0 40px
	border 1px solid $danger-color
	text-align left
	.count
		line-height 1
		font 230px $OsBold
		color $video-accent-color
	.ic
		display inline-block
		background url('../img/video-ic-sprite.png') no-repeat
		height 90px
		position absolute
		top 40px
		left 40px
		&__hack
			width 70px
			background-position 0 0
		&__thief
			width 70px
			background-position -73px 0
		&__quality
			width 78px
			background-position -150px 0
.video__adv--descr
	position absolute
	font-size 1.250em
	top 50%
	transform translateY(-50%)
	left 140px
	z-index 4
	max-width 190px
		
// Design section
.design__item
	p
		font-size 1.250em
	.ic
		display inline-block
		margin-bottom 15px
		width 109px
		height 109px
		background url('../img/design-ic-sprite.png') no-repeat
		&__1
			background-position 1px 0
		&__2
			background-position -107px 0
		&__3
			background-position -216px 0
		&__4
			background-position -326px 0
		&__5
			background-position -437px 0
		&__6
			background-position -547px 0

// example

.example__item
	padding 15px
	transition all .23s ease-in-out
	background transparent
	text-align center
	font 1.250em $RobBold
	margin-bottom 30px
	min-height 345px
	header
		position relative
		.rec
			font 1.563em $OsBold
			text-transform uppercase
			color $danger-color
			position absolute
			top 10px
			left 10px
			z-index 20
			padding-left 20px
			&:before
				border-radius 100%
				width 15px
				height 15px
				content ''
				position absolute
				left 0
				top 50%
				transform translateY(-50%)
				display inline-block
				background $danger-color
	&--link
		display block
		width 100%
		position relative
		text-align center
		img
			display block
			max-height 172px
		&:after
			width 100%
			height 100%
			content ''
			position absolute
			top 0
			left 0
			background rgba($accent-color, .7)
			transition all .23s ease-in-out
			opacity 0
		.more
			font-family $RobBold
			text-transform uppercase
			color $light-color
			transition all .23s ease-in-out
			opacity 0
			text-align center
			position absolute
			top 50%
			left 50%
			transform translate(-50%, -50%)
			z-index 10
			
	&--title
		margin 15px 0
		text-transform uppercase
		font-size 1.563em
	&:hover
		background $light-color
		.example__item--link
			&:after
				opacity 1
			.more
				opacity 1

// form section
.sect__form
	background $accent-color
	.sect__descr
		color $light-color
	
	.form__block
		border 2px solid $light-color
		padding 40px
		background url('../img/form-bg-2.png') top right no-repeat
	
		&--item
			color $light-color
			font-family $RobReg
			margin-bottom 30px
			text-align left
			p
				margin-bottom 20px
				
// gallery
.gallery__wrapp
	width 100%
	.gallery__item
		display inline-block
		overflow hidden
		width 25%
		height 350px
		float left
		img
			width 100%
			height 100%

// service
.video__serv--item
	border 2px solid $danger-color
	padding 30px
	transition all .23s ease-in-out
	background transparent
	display table
	min-height 185px
	.ic
		width 100px
		height 100px
		display table-cell
		vertical-align middle
		background url('../img/video-links-ic.png') no-repeat
		&__proect
			background-position 0 0
		&__install
			background-position -102px 0
		&__service
			background-position -202px 0
	&:hover
		background $video-accent-color
		button
			opacity 1
	&.no-border
		border-left none
		border-right none
	
.video__serv--descr
	padding-left 25px
	display table-cell
	vertical-align middle
	p
		font 1.250em $RobReg
		margin-bottom 15px
	.btn__price
		color $accent-color
		text-transform uppercase
		font 0.938em $RobBold
		transition all .23s ease-in-out
		opacity 0
		background transparent

// pricelist
.video__pricelist
	font 1.25em $RobReg
	.price__list
		
		&--item
			display block
			position relative
			
			overflow hidden
			margin-bottom 20px
			&:last-child
				margin-bottom 40px
			span
				float right
			p
				position relative
				display inline-block
				&:after
					content ''
					width 1000%
					border-bottom 2px dotted $dotted-color
					position absolute
					bottom 0
					left 100%
					

// advantages
.sect__adv--company
	.adv__row
		border 2px solid $danger-color
		padding 40px
		margin-bottom 0
		
		text-align left
		
		&.first
			background url('../img/adv-video-item-bg-1.png') no-repeat 140px -20px
			border-bottom none
		&.second
			background url('../img/adv-video-item-bg-2.png') no-repeat bottom left
			border-bottom none
		&.third
			background url('../img/adv-video-item-bg-3.png') no-repeat bottom left
			border-bottom none
		&.fourth
			background url('../img/adv-video-item-bg-4.png') no-repeat bottom left

		&--title
			color #000c90
			text-transform uppercase
			font 2.500em $RobBold
			
		.adv__list
			&--item
				font 1.25em $RobReg
				display block
				margin-bottom 30px
				position relative
				text-align left
				padding-left 50px
				&:before
					width 30px
					height 2px
					background $danger-color
					content ''
					display inline-block
					position absolute
					top 12px
					left 0
							