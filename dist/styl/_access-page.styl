@import '_vars.styl'

.header__access
	background url('../img/protect-header-bg.png') center no-repeat
	background-size cover
	padding-bottom 80px
	.header__title
		text-transform uppercase
		margin-bottom 60px
		span
			font-size 24px
	.man__img
		position absolute
		right 100px
		bottom 0
		z-index 5
		display block
		width auto
			
.sect__form--access
	background $accent-color
	.form__wrapper
		padding 30px 60px
		background url('../img/form-block-bg.png') top right no-repeat
		.form__item
			width 100%
			text-align center
			
.no-bg
	color $light-color
	background transparent
	span
		outline none
		background transparent
		padding 0
		
	
